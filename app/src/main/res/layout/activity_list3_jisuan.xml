<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".list3_jisuan">

    <TextView
        android:id="@+id/list3_jisuan_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="汇率计算"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/list3_jisuan_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:hint="input foreign money"
        android:inputType="numberDecimal"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/list3_jisuan_title" />

    <TextView
        android:id="@+id/list3_jisuan_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:hint="显示RMB"
        android:textColor="@color/purple_700"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@+id/list3_jisuan_input"
        tools:layout_editor_absoluteX="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>